# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build dev`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t dev`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system dev && \
          adduser --system -G dev dev

COPY apps/dev/dist dev/
RUN chown -R dev:dev .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix dev --omit=dev -f install

CMD [ "node", "dev" ]
